<%= form_with(model: agreement, local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>

  <%= form.text_field :name %>
  <%= form.text_field :summary, hint: "Single sentence overview of this agreement" %>
  <%= form.rich_text_area :body, hint: "The full copy that is being agreed to" %>

  <%= form.number_field :position %>

  <%= form.check_box :active, hint: "Should this agreement be required for new members?" %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
