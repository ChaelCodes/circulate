<% if @item.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag url_for @item.image.variant(resize_to_limit: [200, 140]) %>
  </p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Number:</strong>
  <%= @item.number %>
</p>

<p>
  <strong>Categories:</strong>
  <%= item_categories(@item) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Size:</strong>
  <%= @item.size %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @item.brand %>
</p>

<p>
  <strong>Model:</strong>
  <%= @item.model %>
</p>

<p>
  <strong>Serial:</strong>
  <%= @item.serial %>
</p>

<%= link_to 'Edit', edit_item_path(@item) %>

<table class="table table-scroll">
  <% @item.audits.each do |audit| %>
    <tr>
      <td><%= audit.created_at %></td>
      <td>
        <ul>
          <% audit.audited_changes.each do |key, values| %>
            <li><strong><%= key %></strong> set to <em><%= audit.action == "create" ? values : values.last %></em></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
</table>