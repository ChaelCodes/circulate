<%= form_with(model: item, local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>
  <%= form.text_field :name %>
  <%= form.text_field :number %>
  <%= form.collection_select :category_ids, @categories, :id, proc{|c| full_category_name(c) }, {}, multiple: true %>
  <%= form.rich_text_area :description %>
  <%= form.text_field :size %>
  <%= form.text_field :brand %>
  <%= form.text_field :model %>
  <%= form.text_field :serial %>
  <%= form.file_field :image %>

  <%= form.actions do %>
    <%= form.submit %> or <%= link_to "cancel", :back %>
  <% end %>
<% end %>
