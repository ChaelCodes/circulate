<%= form_with(model: member, local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>

  <%= form.text_field :full_name %>
  <%= form.text_field :preferred_name %>
  <%= form.text_field :email %>
  <%= form.select :pronoun, options_for_select(member_pronoun_options), prompt: true %>
  <%= form.text_field :custom_pronoun %>
  <%= form.text_field :phone_number %>
  <%= form.text_area :notes %>
  <%= form.select :id_kind, options_for_select(member_id_kind_options), prompt: true %>
  <%= form.text_field :other_id_kind %>
  <%= form.text_field :id_number %>
  <%= form.check_box :address_verified %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
