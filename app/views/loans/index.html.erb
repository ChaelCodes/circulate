<%= index_header "Loans" do %>
  <%= link_to 'New Loan', new_loan_path, class: "btn" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Member</th>
      <th>Checked out</th>
      <th>Due at</th>
      <th>Ended at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.item.name %></td>
        <td><%= loan.member.full_name %></td>
        <td><%= loan.created_at %></td>
        <td><%= loan.due_at %></td>
        <td><%= loan.ended_at %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>