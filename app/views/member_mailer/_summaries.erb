<% if has_overdue_items %>
  <p class="overdue"><strong>Please return all overdue items as soon as possible so other members can check them out.</strong></p>
<% end %>

<ul>
<% summaries.each do |summary| %>
  <li>
    <strong><%= full_item_number(summary.item) %> - <%= summary.item.name %></strong>
    <% if summary.ended? %>
      returned
    <% else %>
      <% if summary.overdue_as_of?(now) %>
        <span class="overdue">
          was due
          <%= checked_out_date(summary.due_at) %>
        </span>
      <% else %> 
        <% if summary.renewed? %>
          renewed until
        <% else %>
          due
        <% end %>
        <%= checked_out_date(summary.due_at) %>
      <% end %>
      <% if (count = summary.item.holds.active.count) && count > 0 %>
        <br><span class="people-waiting"><%= pluralize count, "member" %> are waiting to borrow this item</span>
      <% end %>
    <% end %>
  </li>
<% end %>
</ul>