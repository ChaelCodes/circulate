<div class="columns">
  <div class="column col-8 col-sm-12 col-mx-auto">
     <div class="instructions text-center">
      <p class="title_bold">The following information is needed to create your account.</p>
      <p class="body">When you have filled out the fields below, click <em>Save and Continue</em> to go on to the next step.</p>
      <div class="divider"></div>
    </div>
    <%= form_with(model: @member, url: signup_members_url, builder: SpectreFormBuilder) do |form| %>
      <%= render partial: 'admin/members/fields', locals: { form: form, show_password_inputs: true } %>

      <%= form.actions do %>
        <%= form.submit "Save and Continue" %>
      <% end %>
    <% end %>
  </div>
</div>