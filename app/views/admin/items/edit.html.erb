<% content_for :header do %>
  <%= index_header "Editing Item" %>
<% end %>

<%= render 'form', item: @item %>

<div class="destroy-area">
  <details>
    <summary>Destroy this item?</summary>
    <p>This cannot be undone.</p>
    <%= button_to 'Destroy Item', [:admin, @item], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-warning" %>
  </details>
</div>