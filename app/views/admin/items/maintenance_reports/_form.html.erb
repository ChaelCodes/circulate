<%= form_with(model: [:admin, @item, maintenance_report], builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>
  <%= form.rich_text_area :body %>
  <%= form.number_field :time_spent, hint: "How many minutes did you spend on this?" %>
  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
