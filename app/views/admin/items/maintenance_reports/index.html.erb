<%= render "admin/items/profile" do %>
  <table>
    <thead>
      <tr>
        <th>Time spent</th>
        <th>Creator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @maintenance_reports.each do |maintenance_report| %>
        <tr>
          <td><%= maintenance_report.time_spent %></td>
          <td><%= maintenance_report.creator_id %></td>
          <td><%= link_to 'Show', [:admin, @item, maintenance_report] %></td>
          <td><%= link_to 'Edit', edit_admin_item_maintenance_report_path(@item, maintenance_report) %></td>
          <td><%= link_to 'Destroy', [:admin, @item, maintenance_report], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Maintenance Report', new_admin_item_maintenance_report_path(@item), class: "btn" %>
<% end %>