<%= form_with(model: [:admin, member], builder: SpectreFormBuilder) do |form| %>
  <%= render 'fields', form: form %>

  <%= form.text_area :notes %>
  <%= form.select :status, options_for_select(member_status_options, member.status), prompt: true %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
