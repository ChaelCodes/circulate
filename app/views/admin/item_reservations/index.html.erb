<%= render "admin/items/profile" do %>
  <table class="table">
    <thead>
      <th>#</th>
      <th>Member</th>
      <th>Reserved</th>
      <th>Wait time</th>
    </thead>
    <tbody>
      <% @reservations.each_with_index do |reservation, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <%= link_to preferred_or_default_name(reservation.member),
                  admin_member_reservations_path(reservation.member) %>
          </td>
          <td><%= date_with_time_title reservation.created_at %></td>
          <td><%= time_ago_in_words(reservation.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>