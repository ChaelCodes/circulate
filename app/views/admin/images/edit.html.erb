<%= tag.div data: {controller: "image-editor", image_editor_rotation: @image.metadata.fetch("rotation", 0) } do %>
  <%= form_with(model: @image, scope: "image", url: admin_item_image_path(@item)) do |f| %>
    <% if @image.attached? %>
      <%= image_tag url_for(@image.variant(resize_to_limit: [400, 280])), data: {target: "image-editor.image"} %>
    <% end %>

    <a href="#" data-action="image-editor#left">⟲</a>
    <a href="#" data-action="image-editor#right">⟳</a>

    <%= f.hidden_field :rotation, value: @image.metadata["rotation"], data: {target: "image-editor.field"} %>

    <%= f.submit "Save" %>
  <% end %>
<% end %>