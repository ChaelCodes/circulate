<%= render "admin/members/profile" do %>
  <% if @holds.any? %>
    <div id="current-holds" class="member-holds">
      <% @holds.each do |hold| %>
        <div id="<%= dom_id hold %>" class="columns mt-2 mb-2 highlightable">
          <div class="column col-sm-6 col-4">
            <%= tag.div class: "item-image" do %>
              <% if hold.item.image.attached? %>
                <%= link_to admin_item_path(hold.item) do %>
                  <%= image_tag url_for(rotated_variant(hold.item.image, resize_to_limit: [160, 112])), class: "p-right" %>
                <% end %>
              <% else %>
                <div class="image-placeholder"></div>
              <% end %>
            <% end %>
          </div>

          <div class="column col-sm-6 col-4">
            <p><%= full_item_number(hold.item) %></p>
            <p><%= link_to hold.item.name, admin_item_path(hold.item) %></p>
          </div>
          <div class="column col-sm-12 col-4 text-right">
            <%= button_to [:admin, hold.member, hold], method: :delete, class:"btn mb-2", remote: true do %>
              <%= feather_icon "x" %>Cancel
            <% end %>
          </div>

        </div>
        <div class="divider"></div>
      <% end %>
    </div>
    <div class="info-box">
      <%= button_to admin_member_hold_loan_path(@member), method: :post, class: "btn btn-primary" do %>
        <%= feather_icon "upload" %>Lend All Holds
      <% end %>
    </div>
  <% end %>

  <%= render partial: "admin/members/lookup", locals: {member: @member}%>
<% end %>