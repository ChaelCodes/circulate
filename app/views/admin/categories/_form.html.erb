<%= form_with(model: [:admin, category], local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>
  <%= form.text_field :name %>
  <%= form.text_field :slug %>
  <%= form.collection_select :parent_id, @all_categories, :id, proc{|c| full_category_name(c) }, include_blank: "None" %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
