<%= form_with(model: [:admin, category], local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>

  <%= form.collection_select :parent_id, Category.entire_tree, :id, :name, include_blank: "-" %>
  <%= form.text_field :name %>
  <%= form.text_field :slug %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
