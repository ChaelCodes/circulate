<%= content_for :header do %>
  <%= index_header "Money" %>
<% end %>

<table class="table monthly-adjustments">
  <thead>
    <tr>
      <th></th>
      <th class="left-lined" colspan="2">Memberships</th>
      <th class="left-lined" colspan="2">Renewals</th>
      <th class="left-lined" colspan="3">Payments</th>
    </tr>
    <tr>
      <th>Month</th>
      <th class="left-lined">Count</th>
      <th class="text-right fees">Fees</th>
      <th class="left-lined">Count</th>
      <th class="text-right fees">Fees</th>
      <th class="text-right fees left-lined">Square</th>
      <th class="text-right fees">Cash</th>
    </tr>
  </thead>
  <tbody>
    <% @monthly_adjustments.each do |ma| %>
      <tr>
        <td><%= Date::MONTHNAMES[ma.month] %> <%= ma.year %></td>
        <td class="left-lined"><%= ma.new_membership_count if ma.new_membership_count > 0 %></td>
        <td class="text-right fees"><%= ma.new_membership_total&.format %></td>
        <td class="left-lined"><%= ma.renewal_membership_count if ma.renewal_membership_count > 0 %></td>
        <td class="text-right fees"><%= ma.renewal_membership_total&.format %></td>
        <td class="text-right fees left-lined"><%= ma.square_total&.format %></td>
        <td class="text-right fees"><%= ma.cash_total&.format %></td>
      </tr>
    <% end %>
  <tfoot>
    <tr>
      <td>Total</td>
      <td class="left-lined"><%= @monthly_adjustments.sum(&:new_membership_count) %></td>
      <td class="text-right fees"><%= Money.new(@monthly_adjustments.map(&:new_membership_total).compact.sum).format %></td>
      <td class="left-lined"><%= @monthly_adjustments.sum(&:renewal_membership_count) %></td>
      <td class="text-right fees"><%= Money.new(@monthly_adjustments.map(&:renewal_membership_total).compact.sum).format %></td>
      <td class="text-right fees"><%= Money.new(@monthly_adjustments.map(&:square_total).compact.sum).format %></td>
      <td class="text-right fees"><%= Money.new(@monthly_adjustments.map(&:cash_total).compact.sum).format %></td>
    </tr>
  </tfoot>
</table>