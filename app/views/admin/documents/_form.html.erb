<%= form_with(model: [:admin, document], local: true, builder: SpectreFormBuilder) do |form| %>
  <%= form.errors %>

  <%= form.text_field :name %>
  <%= form.text_field :summary, hint: "Single sentence overview of this document" %>
  <%= form.rich_text_area :body, hint: "The full copy of the document" %>

  <%= form.actions do %>
    <%= form.submit %>
  <% end %>
<% end %>
