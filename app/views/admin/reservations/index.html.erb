<%= render "admin/members/profile" do %>
  <% if @reservations.any? %>
    <div id="current-reservations" class="member-reservations">
      <% @reservations.each do |reservation| %>
        <div id="<%= dom_id reservation %>" class="columns mt-2 mb-2 highlightable">
          <div class="column col-sm-6 col-4">
            <%= tag.div class: "item-image" do %>
              <% if reservation.item.image.attached? %>
                <%= link_to admin_item_path(reservation.item) do %>
                  <%= image_tag url_for(rotated_variant(reservation.item.image, resize_to_limit: [160, 112])), class: "p-right" %>
                <% end %>
              <% else %>
                <div class="image-placeholder"></div>
              <% end %>
            <% end %>
          </div>

          <div class="column col-sm-6 col-4">
            <p><%= full_item_number(reservation.item) %></p>
            <p><%= link_to reservation.item.name, admin_item_path(reservation.item) %></p>
          </div>
          <div class="column col-sm-12 col-4 text-right">
            <%= button_to [:admin, reservation.member, reservation], method: :delete, class:"btn mb-2", remote: true do %>
              <%= feather_icon "x" %>Cancel
            <% end %>
          </div>

        </div>
        <div class="divider"></div>
      <% end %>
    </div>
  <% end %>

  <%= render partial: "admin/members/lookup", locals: {member: @member}%>
<% end %>