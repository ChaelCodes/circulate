<%= content_for :header do %>
  <%= index_header "Editing Library" %>
<% end %>

<%= form_with(model: @library, method: :patch, url: super_admin_library_url(@library), builder: SpectreFormBuilder, data: {controller: "form"}) do |form| %>
  <%= form.errors %>

  <%= form.text_field :name %>
  <%= form.text_field :hostname %>
  <%= form.file_field :image, hint: "Take a photo with the device's camera", data: {"turbolinks-permanent": true} %>

  <%= form.submit %>
<% end %>
